---
const {
  title = 'AWS Certification Prep',
  description = 'Practice AWS certification scenarios with focused multiple-choice drills.',
  currentExam = 'sap-c02',
} = Astro.props;

const exams = [
  {
    id: 'sap-c02',
    label: 'SA Pro',
    code: 'SAP-C02',
    base: '/aws/sap-c02/high-availability',
    topics: [
      { label: 'High Availability', href: '/aws/sap-c02/high-availability' },
      { label: 'Networking', href: '/aws/sap-c02/networking' },
      { label: 'Security', href: '/aws/sap-c02/security' },
    ],
  },
  {
    id: 'dop-c02',
    label: 'DevOps Pro',
    code: 'DOP-C02',
    base: '/aws/dop-c02',
    topics: [
      { label: 'Pipelines', href: '/aws/dop-c02/pipelines' },
      { label: 'Observability', href: '/aws/dop-c02/observability' },
    ],
  },
];

const currentTopics = exams.find((exam) => exam.id === currentExam)?.topics ?? [];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossOrigin="" />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --bg: #05060a;
        --panel: #0f1118;
        --card: #111423;
        --border: #1e2535;
        --muted: #9fb3c8;
        --text: #eaf2ff;
        --accent: #6decb9;
        --accent-2: #82b4ff;
        --shadow: 0 20px 80px rgba(0, 0, 0, 0.35);
      }
      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        font-family: 'Space Grotesk', 'Inter', system-ui, -apple-system, sans-serif;
        background: radial-gradient(100% 100% at 0% 0%, #0b1021 0%, #05060a 48%),
          linear-gradient(145deg, rgba(109, 236, 185, 0.08), rgba(130, 180, 255, 0.08));
        color: var(--text);
        min-height: 100vh;
      }
      a {
        color: inherit;
        text-decoration: none;
      }
      .bg-grid {
        position: fixed;
        inset: 0;
        background-image: linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
          linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
        background-size: 22px 22px;
        opacity: 0.5;
        pointer-events: none;
        z-index: 0;
      }
      header {
        position: sticky;
        top: 0;
        z-index: 2;
        backdrop-filter: blur(18px);
        background: rgba(5, 6, 10, 0.8);
        border-bottom: 1px solid var(--border);
      }
      nav {
        max-width: 1100px;
        margin: 0 auto;
        padding: 18px 22px;
        display: flex;
        flex-direction: column;
        gap: 12px;
      }
      .brand {
        font-weight: 700;
        letter-spacing: -0.02em;
        display: inline-flex;
        align-items: center;
        gap: 8px;
      }
      .brand .pill {
        background: linear-gradient(120deg, var(--accent), var(--accent-2));
        color: #03060e;
        padding: 6px 10px;
        border-radius: 10px;
        font-size: 12px;
        font-weight: 700;
      }
      .exam-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
      }
      .exam-tabs {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
      }
      .exam-pill {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 14px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: rgba(255, 255, 255, 0.02);
        color: var(--text);
        font-weight: 600;
        transition: border 0.2s ease, transform 0.1s ease;
      }
      .exam-pill .code {
        font-size: 12px;
        color: var(--muted);
        letter-spacing: 0.04em;
      }
      .exam-pill:hover {
        transform: translateY(-1px);
        border-color: var(--accent);
      }
      .exam-pill.active {
        border-color: var(--accent);
        background: rgba(109, 236, 185, 0.1);
        color: var(--accent);
      }
      .subnav {
        display: flex;
        gap: 10px;
        align-items: center;
        flex-wrap: wrap;
      }
      .subnav-title {
        color: var(--muted);
        font-size: 13px;
        text-transform: uppercase;
        letter-spacing: 0.12em;
      }
      .subnav-links {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
      }
      .subnav-links a {
        font-size: 14px;
        padding: 9px 12px;
        border-radius: 10px;
        border: 1px solid var(--border);
        background: rgba(255, 255, 255, 0.03);
        transition: border 0.2s ease, transform 0.1s ease;
      }
      .subnav-links a:hover {
        border-color: var(--accent);
        transform: translateY(-1px);
      }
      main {
        position: relative;
        z-index: 1;
        max-width: 1100px;
        margin: 0 auto;
        padding: 32px 22px 80px;
      }
      .surface {
        background: linear-gradient(135deg, rgba(17, 20, 35, 0.92), rgba(15, 17, 30, 0.9));
        border: 1px solid var(--border);
        box-shadow: var(--shadow);
        border-radius: 20px;
        padding: 28px;
        position: relative;
        overflow: hidden;
      }
      .surface::after {
        content: '';
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 20% 20%, rgba(109, 236, 185, 0.14), transparent 30%),
          radial-gradient(circle at 80% 10%, rgba(130, 180, 255, 0.12), transparent 32%);
        pointer-events: none;
        z-index: 0;
      }
      footer {
        color: var(--muted);
        text-align: center;
        padding: 24px;
        font-size: 14px;
      }
      .chip {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 12px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: rgba(255, 255, 255, 0.04);
        font-size: 13px;
        color: var(--muted);
      }
      @media (max-width: 720px) {
        main {
          padding: 24px 18px 60px;
        }
      }
    </style>
  </head>
  <body>
    <div class="bg-grid" aria-hidden="true"></div>
    <header>
      <nav>
        <div class="exam-bar">
          <a class="brand" href="/">
            <span class="pill">AWS</span>
            Cert Lab
          </a>
          <div class="exam-tabs">
            {exams.map((exam) => (
              <a class={`exam-pill ${exam.id === currentExam ? 'active' : ''}`} href={exam.base}>
                <span class="code">{exam.code}</span>
                <span>{exam.label}</span>
              </a>
            ))}
          </div>
        </div>
        <div class="subnav">
          <div class="subnav-title">Topics</div>
          <div class="subnav-links">
            {currentTopics.length
              ? currentTopics.map((topic) => <a href={topic.href}>{topic.label}</a>)
              : <span class="chip">More coming soon</span>}
          </div>
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>Sharpen your cert muscle memory with scenario-first drills.</footer>
  </body>
</html>
